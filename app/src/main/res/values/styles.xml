<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.RescueReach.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <!-- Text Input Styles -->
    <style name="Widget.RescueReach.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.RescueReach.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.RescueReach.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.RescueReach.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">?attr/colorOnSurface</item> </style>
        <!-- Add to existing styles.xml -->
        <!-- Progress Bar Style -->
        <style name="Widget.RescueReach.ProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
            <item name="indicatorColor">?attr/colorPrimary</item>
            <item name="trackCornerRadius">3dp</item>
        </style>

        <!-- Dialog Style -->
        <style name="ThemeOverlay.RescueReach.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
            <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.RescueReach.Title</item>
            <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.RescueReach.Body</item>
            <item name="buttonBarPositiveButtonStyle">@style/Widget.RescueReach.Button</item>
            <item name="buttonBarNegativeButtonStyle">@style/Widget.RescueReach.Button.Text</item>
        </style>

        <!-- Text Button Style -->
        <style name="Widget.RescueReach.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
            <item name="android:textColor">?attr/colorPrimary</item>
            <item name="rippleColor">@color/primary_variant</item>
        </style>

        <!-- Spinner Style -->
        <style name="Widget.RescueReach.Spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
            <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
            <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
            <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        </style>

</resources>